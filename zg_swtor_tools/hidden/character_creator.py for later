import bpy



# Operator

class ZGSWTOR_OT_character_creator(Operator):
    bl_label = "SWTOR Character Creator"
    bl_idname = "zgswtor.character_creator"
    bl_description = "Creates a SWTOR Player Character by entering their values in SWTOR's Appearance Editor or the Appearance Designer Kiosk.\n\n• Requires setting the path to a 'resources' folder in this addon's Preferences.\n• Requires an enabled modern .gr2 Importer Addon (not the Legacy version)"
    bl_options = {'REGISTER', 'UNDO'}


    # Properties
    
    gather_only: bpy.props.BoolProperty(
        name="Gather Assets Only",
        description="Don't Import The Character, and just copy the required assets\nto the Character's folder",
        default = False,
        options={'HIDDEN'}
    )
